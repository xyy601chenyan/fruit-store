<%= simple_form_for [:admin,@product] do |f| %>
<div class="group">
  <%= f.input :title,label:"名称" %>
</div>

<div class="group">
  <%= f.input :description,label:"描述" %>
</div>

<div class="group">
  <%= f.input :quantity,label:"数量" %>
</div>

<div class="group">
  <%= f.input :price,label:"价格" %>
</div>

<div class="group">
  <%= f.input :image, as: :file %>
</div>

<div class="group">
  <!-- <%#= f.input :avatars, as: :file, multiple: true %> -->
  <!-- <%#= form.file_field :avatars, multiple: true %> -->
  <%= f.input :avatars, multiple: true %>
</div>

<%= f.submit "确定",data: {disable_with: "提交中..."},class:"btn btn-sm btn-primary" %>
<% end %>
